{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}
  <div class="breadcrumb">
    <nav role="navigation" aria-labelledby="system-breadcrumb">
      <h2 class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
      <ul>
      {% for delta,item in breadcrumb %}
        <li>
          {% if item.url %}
            <a href="{{ item.url }}">{{ item.text }}</a>
          {% else %}
            {{ item.text }}
          {% endif %}
        </li>

        {% if delta < breadcrumb|length - 1 %}
          <span class="breadcrumb-separator">{{ breadcrumb_separator }}</span>
        {% endif%}
      {% endfor %}
      </ul>
    </nav>
  </div>
{% endif %}

